---
import FeatureCard from '../../components/FeatureCard.astro';
import Hero from '../../components/Hero.astro';
import Layout from '@layouts/Layout.astro';
import { getTranslation } from '@i18n/index';

const lang = Astro.params.lang;
const currentLang = lang === 'es' || lang === 'en' ? lang : 'es';

const t = getTranslation(lang as 'es' | 'en');

export async function getStaticPaths() {
  return [{ params: { lang: 'es' } }, { params: { lang: 'en' } }];
}
---

<Layout lang={currentLang} t={getTranslation(currentLang)} title="Sobre nosotros">
  <Hero
    title={t.heroAbout.title}
    subtitle={t.heroAbout.subtitle}
    image="/img/img_2.jpg"
    lang={currentLang}
    t={t}
  />
</Layout>
