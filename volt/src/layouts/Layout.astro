---
import { ClientRouter } from 'astro:transitions';

import Footer from '../components/Footer.astro';
import ThemeManager from '../components/ThemeManager.jsx';
import Header from '../components/Header/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Página de presentación de nuestra empresa" />
    <title>{title}</title>
    <ClientRouter />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body
    class="flex flex-col min-h-screen bg-background-secondary text-text-primary dark:bg-dark-secondary dark:text-dark-text-primary"
  >
    <ThemeManager client:only="react" />
    <Header />

    <main class="flex-1 pt-20">
      <slot />
    </main>

    <Footer />
  </body>
</html>
