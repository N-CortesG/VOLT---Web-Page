---
import 'aos/dist/aos.css';
import HeroTypewriter from '../scripts/HeroTypewriter';

interface Props {
  title: string;
  subtitle: string;
  image: string;
  cta?: {
    label: string;
    href: string;
  };
}

const { title, subtitle, image, cta } = Astro.props;
---

<section
  class="relative w-full h-[70vh] md:h-[90vh] bg-cover bg-center bg-no-repeat transition-colors duration-500"
  style={`background-image: url(${image})`}
  aria-label="Hero principal"
>
  <div class="absolute inset-0 bg-black/60 dark:bg-black/70 transition-colors duration-500"></div>

  <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-6">
    <HeroTypewriter title={title} client:only="react" />

    <p
      class="mt-6 text-white/90 dark:text-gray-300 text-lg md:text-xl lg:text-2xl max-w-2xl transition-colors duration-500"
    >
      {subtitle}
    </p>

    {
      cta && (
        <a
          href={cta.href}
          class="mt-8 inline-block px-6 py-3 text-white bg-green-dark hover:bg-green-light dark:bg-dark-green-light dark:hover:bg-dark-green-dark font-semibold rounded-md shadow-md transition-colors duration-300"
        >
          {cta.label}
        </a>
      )
    }
  </div>
</section>
