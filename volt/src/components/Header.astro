---
import ThemeToggle from './ThemeToggle.astro';
import logo from '../assets/logo.svg';

const currentPath = Astro.url.pathname;
---

<header
  class="bg-background text-text-primary dark:bg-dark-background dark:text-dark-text-primary py-4"
>
  <div class="container mx-auto flex items-center justify-between px-4">
    <!-- Logo -->
    <a href="/">
      <img src={logo.src} alt="Logo de la empresa" class="h-10" />
    </a>

    <!-- Navegación + botón toggle -->
    <div class="flex items-center gap-6">
      <nav>
        <ul class="flex gap-2">
          <li>
            <a
              href="/"
              class={`px-3 py-2 rounded-md transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-gray-700 ${
                currentPath === '/' ? 'bg-gray-200 dark:bg-gray-600 font-semibold' : ''
              }`}
            >
              Sobre Nosotros
            </a>
          </li>
          <li>
            <a
              href="/services"
              class={`px-3 py-2 rounded-md transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-gray-700 ${
                currentPath.startsWith('/services')
                  ? 'bg-gray-200 dark:bg-gray-600 font-semibold'
                  : ''
              }`}
            >
              Servicios
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class={`px-3 py-2 rounded-md transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-gray-700 ${
                currentPath.startsWith('/contact')
                  ? 'bg-gray-200 dark:bg-gray-600 font-semibold'
                  : ''
              }`}
            >
              Contacto
            </a>
          </li>
        </ul>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>
