---
// src/components/FeatureCard.astro
interface Props {
  tag: string;
  title: string;
  description: string;
  image?: string;
  values?: { icon: string; label: string }[]; // para múltiples íconos opcionales
}

const { tag, title, description, image, values } = Astro.props;
---

<div
  class="bg-white dark:bg-dark-background border border-line dark:border-dark-line rounded-xl shadow-md p-6 flex flex-col justify-between transition-colors duration-300 hover:shadow-lg"
>
  <div>
    <p class="text-yellow font-bold text-sm mb-2">{tag}</p>
    <h3 class="text-xl font-extrabold text-black dark:text-white mb-4">{title}</h3>
    <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">{description}</p>
  </div>

  {
    image && (
      <div class="mt-6">
        <img src={image} alt={title} class="h-28 mx-auto object-contain" />
      </div>
    )
  }

  {
    values && (
      <div class="grid grid-cols-2 gap-4 mt-6">
        {values.map((val) => (
          <div class="flex flex-col items-center">
            <img src={val.icon} alt={val.label} class="h-10" />
            <span class="mt-2 text-sm text-black dark:text-white">{val.label}</span>
          </div>
        ))}
      </div>
    )
  }
</div>
