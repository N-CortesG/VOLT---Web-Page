---
interface Props {
  title?: string;
  message?: string;
  buttonText?: string;
  redirectTo?: string;
}

const {
  title = '¡Esta página no está disponible!',
  message = 'Estamos trabajando para mejorar esta sección. Muy pronto estará disponible para ti.',
  buttonText = 'Volver al inicio',
  redirectTo = '/',
} = Astro.props;
---

