---
export interface Props {
  title: string;
  items: {
    icon: any; // Icono como componente (ej: <Sun />)
    title: string;
    description: string;
  }[];
}

const { title, items } = Astro.props;
---

<section class="py-16 px-4 bg-background dark:bg-dark-background">
  <div class="max-w-7xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-text-primary dark:text-dark-text-primary mb-10">
      {title}
    </h2>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {items.map((item) => (
        <div class="p-6 rounded-2xl bg-white dark:bg-dark-secondary shadow-md transition-transform hover:scale-105">
          <div class="mb-4 text-green-dark dark:text-dark-green-light flex justify-center">
            <item.icon class="w-10 h-10 stroke-current" />
          </div>
          <h3 class="text-xl font-semibold text-text-primary dark:text-dark-text-primary mb-2">{item.title}</h3>
          <p class="text-sm text-text-secondary dark:text-dark-text-secondary">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
